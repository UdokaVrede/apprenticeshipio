// Header - Apprentices, Companies, Cities

.parallax-body {
    height: 100vh;
    perspective: 1px;
    transform-style: preserve-3d;
    overflow-x:hidden;
    overflow-y:auto;
}

.regular-wrapper-header, .regular-wrapper-footer {
  width: 100vw;
  height:100vh;
  padding-top:20vh;
  z-index: 2;
  background-color: $background-gray;
  position: relative;
  background-repeat: no-repeat;
  background-size: cover;
}

.regular-wrapper-mini-header, .regular-wrapper-mini-footer {
  padding: 50px 25px 50px 25px;
}

.apprentices-card {
  display: inline-block;
  position: relative;
  width: 258px;
  min-width: 202.5px;
  height: 258px;
  border-radius: 15px;
