html {
  overflow: hidden;
}
.parallax-body {
  height: 100vh;
  perspective: 1px;
  transform-style: preserve-3d;
  overflow-x:hidden;
  overflow-y:auto;
}


// 1st Navbar - Apprentices

.parallax-apprentices-navbar span {
  font-family: $numbers-font;
  color: $teal;
  font-size: 75px;
  margin: 100px;
}

//1st Statistic - # of Apprentices

.regular-wrapper-usa {
  width: 100vw;
  height:100vh;
  padding-top:20vh;
  background-color: $purple;
  z-index: 2;
  position: relative;
}

.floating-image-usa {
  transform: translate(75px, 50px) rotate(-25deg);
  width: 350px;
  float: left;
}

.content-usa {
  margin: 0 auto;
  padding: 50px;
  width: 50%;
  background: $white;
  color: $medium-purple;
  box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
  border-radius: 20px;
  text-align: center;
}

.usa-number {
  font-family: $numbers-font;
  color: $medium-purple;
  padding-top: 40px;
  font-size: 100px;
}

// 2nd Statistic - Apprentice College Education

.parallax-wrapper-education {
  width: 100vw;
  height: 100vh;
  padding-top:10vh;
  box-sizing: border-box;
  transform-style: preserve-3d;
}

.parallax-wrapper-education::before {
    content:"";
    width: 100vw;
    height: 100vh;
    top:0;
    left:0;
  // Insert falling degrees background image here
    background-image: url("https://i.imgur.com/C46DO20.jpg");
    position: absolute;
    background-repeat: no-repeat;
    background-size: cover;
    z-index: -1;
    transform:translateZ(-1px) scale(2);
}

.content-education {
  margin: 0 auto;
  padding: 50px;
  width: 50%;
  background: $white;
  box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
