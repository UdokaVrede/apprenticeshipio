.pinterest-loop {
  width: 500px;
  height: 210px;
  background-color: $medium-red;
  mask-image: url(<%= asset_path 'LargeLoop.svg' %>);
  float: right;
  margin-top: 150px;
  margin-right: 200px;
}

.slack-loop {
  width: 129px;
  height: 110px;
  mask-image: url(<%= asset_path 'TinyLoop.svg' %>);
  background-color: $medium-purple;
  float: left;
  margin-left: 100px;
}

.slack-loop-2 {
  width: 280px;
  height: 260px;
  mask-image: url(<%= asset_path 'SmallLoop.svg' %>);
  background-color: $navy;
  float: right;
  margin-right: 200px;
  margin-top: -400px;
}

.testimonial-linkedin, .testimonial-pinterest, .testimonial-slack {
  background-color: $white;
  border-radius: 20px;
  box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
  overflow: hidden;
  max-width: 100%;
  width: 400px;
}

.testimonial-pinterest {
  margin-top: 100px;
  margin-left: 200px;
}

.testimonial-linkedin {
  margin-left: 800px;
  margin-top: -300px;
  margin-bottom: -200px;
}

.testimonial-slack {
  margin-left: 300px;
  margin-bottom: 100px
}

.testimonial-body-slack, .testimonial-body-pinterest, .testimonial-body-linkedin {
  padding: 40px 40px 80px;
}

.testimonial-body-slack, .testimonial-body-pinterest, .testimonial-body-linkedin p {
  font-family: $headers-font;
  color: white;
  text-align: center;
  font-size: 20px;
  line-height: 25px;
  margin: 1;
}

.testimonial-body-slack {
  background-color: $purple;
}

.testimonial-body-linkedin {
  background-color: $navy;
}

.testimonial-body-pinterest {
  background-color: $medium-red;
}

.testimonial-footer-slack, .testimonial-footer-linkedin, .testimonial-footer-pinterest {
  padding: 30px;
  text-align: center;
  background-color: $white;
}

.testimonial-footer-slack {
  color: $purple;
}

.testimonial-footer-linkedin {
  color: $navy;
}

.testimonial-footer-pinterest {
  color: $medium-red;
}

.testimonial-footer-slack img, .testimonial-footer-linkedin img, .testimonial-footer-pinterest img {
  border-radius: 50%;
  border: 5px solid #fff;
  height: 100%;
  width: 100%;
  margin-top: -100px;
}

.testimonial-footer-slack h3, .testimonial-footer-linkedin h3, .testimonial-footer-pinterest h3 {
  margin: 10px 0;
  font-size: 22px;
}

.testimonial-footer-slack h4, .testimonial-footer-linkedin h4, .testimonial-footer-pinterest h4 {
  font-size: 16px;
  margin: 0;
}

#testimonial-pinterest, #testimonial-slack, #testimonial-linkedin {
  font-size: 25px;
  padding-left: 5px;
}
